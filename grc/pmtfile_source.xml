<?xml version="1.0"?>
<block>
  <name>PMT File Source</name>
  <key>pmtfile_source</key>
  <category>Sources</category>
  <import>import pmtfile</import>
  <make>pmtfile.source($filename, $repeat)</make>

  <param>
    <name>File Name</name>
    <key>filename</key>
    <value>test.pf</value>
    <type>string</type>
  </param>

  <param>
    <name>File Repeat</name>
    <key>repeat</key>
    <value>False</value>
    <type>enum</type>
    <option>
       <name>True</name>
       <key>True</key>
   </option>
    <option>
       <name>False</name>
       <key>False</key>
   </option>
  </param>

  <source>
    <name>out</name>
    <type>short</type>
  </source>

</block>
